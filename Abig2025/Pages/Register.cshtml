@page
@model Abig2025.Pages.RegisterModel
@{
	Layout= null;	
}



<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Abig - Registro</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- MATERIAL DESIGN ICONIC FONT -->
	<link rel="stylesheet" href="fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

	<!-- STYLE CSS -->
	<link rel="stylesheet" href="css/styleRegister.css">
</head>

<body>


<div class="wrapper" style="background-image: url('images/Register/bg-registration-form-2.jpg');">

		

		<div class="inner">


			<a href="/Login" class="back-arrow">
				<i class="zmdi zmdi-arrow-left"></i>
				Atrás
			</a>


			<form action="">
				<h3>Registro</h3>
				<div class="form-group">
					<div class="form-wrapper">
						<label for="">Nombre</label>
						<input type="text" class="form-control">
					</div>
					<div class="form-wrapper">
						<label for="">Apellido</label>
						<input type="text" class="form-control">
					</div>
				</div>
				<div class="form-wrapper">
					<label for="">Email</label>
					<input type="text" class="form-control">
				</div>
				<div class="form-wrapper">
					<label for="">Contraseña</label>
					<input type="password" class="form-control">
				</div>
				<div class="form-wrapper">
					<label for="">Confirmar Contraseña</label>
					<input type="password" class="form-control">
				</div>
				<div class="checkbox">
					<label>
						<input type="checkbox"> Acepto los <a asp-page="/About" style="color: #007bff; text-decoration: underline;">Términos y Condiciones</a>.
						<span class="checkmark"></span>
					</label>
				</div>
				<br />

				<div class="checkbox">
					<label>
						<input type="checkbox"> Acepto la <a asp-page="/Privacy" style="color: #007bff; text-decoration: underline;">Política de Privacidad</a>.
						<span class="checkmark"></span>
					</label>
				</div>

				<button>Crear cuenta </button>
			</form>

			<div class="logo-container">
				<a asp-page="/Index">
					<img src="images/Logos/Logo2.png" alt="Logo" class="logo">
				</a>
			</div>

		</div>

	</div>

</body>
</html>