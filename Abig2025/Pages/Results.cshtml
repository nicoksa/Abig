@page
@model Abig2025.Pages.ResultsModel
@{
    ViewData["Title"] = "Buscar propiedades";
}



<section class="py-5">
    <div class="container">
        <h2 class="mb-4">Filtros avanzados</h2>
        <form method="get" asp-page="./Resultados" class="filtros-container">
            <div class="acordeon-item">
                <div class="acordeon-header">Operación y Tipo</div>
                <div class="acordeon-content">
                    <label>Operación</label>
                    <select name="Operacion">
                        
						<option value="alquiler">Alquiler</option>
                        <option value="temporal">Alquiler Temporal</option>                      
                    </select>
                    <label>Tipo de Propiedad</label>
                    <select name="TipoPropiedad">
                        
                        <option value="casa">Casa</option>
                        <option value="departamento">Departamento</option>
                        <option value="ph">PH</option>
                        <option value="terreno">Terreno</option>
                        <option value="local">Local</option>
                        <option value="quinta">Quinta</option>
                        <option value="chacra">Chacra</option>
                        <option value="estancia">Estancia</option>
                        <option value="oficina">Oficina</option>
                    </select>
                </div>
            </div>

            <div class="acordeon-item">
                <div class="acordeon-header">Ubicación</div>
                <div class="acordeon-content">
                    <label>Provincia</label>
                    <select name="Provincia">
                        <option value="">Todas</option>
                        <option value="Buenos Aires">Buenos Aires</option>
                        <option value="CABA">CABA</option>
                    </select>
                    <label>Localidad</label>
                    <input type="text" name="Localidad" placeholder="Ej: Avellaneda" />
                </div>
            </div>

            <div class="acordeon-item">
                <div class="acordeon-header">Ambientes y Dormitorios</div>
                <div class="acordeon-content">
                    <label>Ambientes</label>
                    <select name="Ambientes">   
                        <option value="seleccionar">Seleccionar</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3 </option>
                        <option value="4">4</option>
                        <option value="4">5+</option>
                    </select>
                    <label>Dormitorios</label>
                    <select name="Dormitorios">
                        <option value="seleccionar">Seleccionar</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5+</option>
                    </select>
                    <label>Baños</label>
                    <select name="Banos">
                        <option value="seleccionar">Seleccionar</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4+</option>
                    </select>
                </div>
            </div>

            <div class="acordeon-item">
                <div class="acordeon-header">Superficie</div>
                <div class="acordeon-content">
                    <label>Sup. cubierta min</label>
                    <input type="number" name="SupCubiertaMin" placeholder="Desde m²" />
                    <label>Sup. cubierta máx</label>
                    <input type="number" name="SupCubiertaMax" placeholder="Hasta m²" />
                    <label>Sup. total min</label>
                    <input type="number" name="SupTotalMin" placeholder="Desde m²" />
                    <label>Sup. total máx</label>
                    <input type="number" name="SupTotalMax" placeholder="Hasta m²" />
                </div>
            </div>

            <div class="acordeon-item">
                <div class="acordeon-header">Precio</div>
                <div class="acordeon-content">
                    <label>Precio mínimo</label>
                    <input type="number" name="PrecioMin" />
                    <label>Precio máximo</label>
                    <input type="number" name="PrecioMax" />

                </div>
            </div>

            <div class="acordeon-item">
                <div class="acordeon-header">Otros</div>
                <div class="acordeon-content">
                    <label>Antigüedad máxima</label>
                    <select name="AntiguedadMax">
                        <option value="">Cualquiera</option>
                        <option value="A estrenar">A estrenar</option>
                        <option value="5">Hasta 5 años</option>
                        <option value="10">Hasta 10 años</option>
                        <option value="20">Hasta 20 años</option>
                        <option value="20">Hasta 30 años</option>
                    </select>


					<label><input type="checkbox" name="Cochera" value="true" /> Con cochera</label>
					<label><input type="checkbox" name="Mascotas" value="true" /> Permite mascotas</label>
                    <label><input type="checkbox" name="Parrilla" value="true" /> Parrilla</label>
                    <label><input type="checkbox" name="Pileta" value="true" /> Pileta</label>
                    <label><input type="checkbox" name="Ascensor" value="true" /> Ascensor</label>

                </div>
            </div>

            <button type="submit" class="submit-btn">Aplicar filtros</button>
        </form>

        <hr class="my-5" />

        <h3>Resultados</h3>
        <div class="row">
            @for (int i = 0; i < 6; i++)
            {
                <div class="card mb-4 p-3 shadow-sm" style="max-width: 100%;">
                    <div class="row g-0 align-items-center">
                        <div class="col-md-4">
                            <img src="/images/prop5.jpg" class="img-fluid rounded-start" alt="Propiedad" />
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">USD 800</h5>
                                <p class="card-text">STUDIOS work&live, Manuel Alberti</p>
                                <p class="card-text"><small class="text-muted">53 m² · 1 amb · 1 dorm · 1 baño · 1 coch</small></p>
                                <p class="card-text">Totalmente equipado, con cocina integrada, escritorio, y balcón con vista.</p>
                                <a href="#" class="btn btn-success me-2">WhatsApp</a>
                                <a href="#" class="btn btn-outline-warning">Contactar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


<script>
    document.querySelectorAll('.acordeon-header').forEach(header => {
      header.addEventListener('click', () => {
        const item = header.parentElement;
        item.classList.toggle('active');
      });
    });
</script>