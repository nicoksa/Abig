@page
@model Abig2025.Pages.Profile.IndexModel
@{
    ViewData["Title"] = "Mi Perfil";
    Layout = "_Layout";
}


<div class="hero page-inner overlay"
     style="background-image: url('images/img33.jpg')">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-9 text-center mt-5">
                <h1 class="heading" data-aos="fade-up">Mi Perfil</h1>

                <nav aria-label="breadcrumb"
                     data-aos="fade-up"
                     data-aos-delay="200">
                    <ol class="breadcrumb text-center justify-content-center">
                        <li class="breadcrumb-item"><a href="index.html">Inicio</a></li>
                        <li class="breadcrumb-item active text-white-50"
                            aria-current="page">
                            Mi Perfil
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>



<div class="profile-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-8">
                <div class="profile-card">
                    <div class="profile-header">
                        <div class="profile-avatar">
                            <i class="bi bi-person-fill"></i>
                        </div>
                        <h2 class="mb-2">@Model.UserFullName</h2>
                        <p class="mb-0 opacity-75">Registrado el @Model.MemberSince</p>
                    </div>

                    <div class="profile-body">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert-success">
                                <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                            </div>
                        }
                        <div class="row">
                            <div class="col-md-6">
                                <div class="info-section">
                                    <h4><i class="bi bi-person-badge me-2"></i>Información Personal</h4>
                                    <div class="info-item">
                                        <span class="info-label">Nombre completo:</span>
                                        <span class="info-value">@Model.UserFullName</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">Email:</span>
                                        <span class="info-value">@Model.Email</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">Teléfono:</span>
                                        <span class="info-value">@(string.IsNullOrEmpty(Model.Phone) ? "No especificado" : Model.Phone)</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">DNI:</span>
                                        <span class="info-value">@(string.IsNullOrEmpty(Model.Dni) ? "No especificado" : Model.Dni)</span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="info-section">
                                    <h4><i class="bi bi-geo-alt me-2"></i>Información de Contacto</h4>
                                    <div class="info-item">
                                        <span class="info-label">Dirección:</span>
                                        <span class="info-value">@(string.IsNullOrEmpty(Model.Address) ? "No especificada" : Model.Address)</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">Ciudad:</span>
                                        <span class="info-value">@(string.IsNullOrEmpty(Model.City) ? "No especificada" : Model.City)</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">Provincia:</span>
                                        <span class="info-value">@(string.IsNullOrEmpty(Model.Province) ? "No especificada" : Model.Province)</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">País:</span>
                                        <span class="info-value">@(string.IsNullOrEmpty(Model.Country) ? "No especificado" : Model.Country)</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="stats-grid">
                            <div class="stat-card">
                                <div class="stat-number">@Model.PropertiesCount</div>
                                <div class="stat-label">Propiedades Publicadas</div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-number">@Model.FavoritesCount</div>
                                <div class="stat-label">Favoritos</div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-number">@Model.MemberFor</div>
                                <div class="stat-label">Días registrado</div>
                            </div>
                        </div>

                        <div class="action-buttons">
                            <a asp-page="/Profile/Edit" class="btn-edit">
                                <i class="bi bi-pencil-square"></i> Editar Perfil
                            </a>
                            <a asp-page="/MyProperties" class="btn-secondary">
                                <i class="bi bi-house"></i> Mis Propiedades
                            </a>
                            <a asp-page="/Favorites" class="btn-secondary">
                                <i class="bi bi-heart"></i> Mis Favoritos
                            </a>
                          
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>