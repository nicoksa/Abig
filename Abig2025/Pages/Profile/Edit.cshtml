@page
@model Abig2025.Pages.Profile.EditModel
@{
    ViewData["Title"] = "Editar Perfil";
    Layout = "_Layout";
}

<!-- Hero Section -->
<div class="hero page-inner overlay"
     style="background-image: url('@Url.Content("~/images/img33.jpg")')">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-9 text-center mt-5">
                <h1 class="heading" data-aos="fade-up">Editar Perfil</h1>

                <nav aria-label="breadcrumb"
                     data-aos="fade-up"
                     data-aos-delay="200">
                    <ol class="breadcrumb text-center justify-content-center">
                        <li class="breadcrumb-item"><a href="index.html">Inicio</a></li>
                        <li class="breadcrumb-item"><a asp-page="/Profile/Index">Mi Perfil</a></li>
                        <li class="breadcrumb-item active text-white-50" aria-current="page">
                            Editar Perfil
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>



<div class="edit-profile-container">
    <div class="container">
        <!-- Título principal con mejor espaciado -->
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-8">
                <div class="text-center mb-4 pt-5" data-aos="fade-up">
                    <!-- Added pt-5 for top padding -->
                    <h3 class="display-10 fw-bold text-primary mb-3">
                        <i class="bi bi-pencil-square me-3"></i>Actualización de Información Personal
                    </h3>
                    <p class="lead text-muted mb-4">
                        Modifica tus datos personales y de contacto para mantener tu perfil actualizado en ABIG
                    </p>
                  
                     
                    
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-8">
                <div class="edit-profile-card mt-4">
                    <!-- Added mt-4 for spacing from title -->
                    <div class="edit-profile-header text-center">
                        <h4 class="mb-2 fw-bold">Formulario de Actualización</h4>
                        <p class="mb-0 opacity-75">Completa los campos que deseas modificar</p>
                    </div>

                    <div class="edit-profile-body">
               

                        <form method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-section">
                                        <h4><i class="bi bi-person-badge"></i>Información Personal</h4>

                                        <div class="form-group">
                                            <label class="form-label" asp-for="Input.FirstName">Nombre</label>
                                            <input asp-for="Input.FirstName" class="form-control" />
                                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label class="form-label" asp-for="Input.LastName">Apellido</label>
                                            <input asp-for="Input.LastName" class="form-control" />
                                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label class="form-label" asp-for="Input.Phone">Teléfono</label>
                                            <input asp-for="Input.Phone" class="form-control" />
                                            <span asp-validation-for="Input.Phone" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label class="form-label" asp-for="Input.Dni">DNI</label>
                                            <input asp-for="Input.Dni" class="form-control" />
                                            <span asp-validation-for="Input.Dni" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-section">
                                        <h4><i class="bi bi-geo-alt"></i>Información de Contacto</h4>

                                        <div class="form-group">
                                            <label class="form-label" asp-for="Input.Address">Dirección</label>
                                            <input asp-for="Input.Address" class="form-control" />
                                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label class="form-label" asp-for="Input.City">Ciudad</label>
                                            <input asp-for="Input.City" class="form-control" />
                                            <span asp-validation-for="Input.City" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label class="form-label" asp-for="Input.Province">Provincia</label>
                                            <input asp-for="Input.Province" class="form-control" />
                                            <span asp-validation-for="Input.Province" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label class="form-label" asp-for="Input.Country">País</label>
                                            <input asp-for="Input.Country" class="form-control" />
                                            <span asp-validation-for="Input.Country" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="action-buttons">
                                <button type="submit" class="btn-save">
                                    <i class="bi bi-check-lg"></i> Guardar Cambios
                                </button>
                                <a asp-page="/Profile/Index" class="btn-cancel">
                                    <i class="bi bi-x-lg"></i> Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
