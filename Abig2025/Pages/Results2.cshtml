@page
@model Abig2025.Pages.Results2Model
@using System.Linq
@{
    ViewData["Title"] = "Propiedades";
}

<link rel="stylesheet" href="~/css/styleResults.css" />



<div class="resultados-wrapper">
    <div class="busqueda-contenedor">
        <!-- COLUMNA DE FILTROS -->
        <div class="filtros-columna">
            <!-- FILTROS APLICADOS -->
            <div id="filtros-aplicados" class="filtros-aplicados"></div>

            <!-- FILTROS DISPONIBLES -->
            <div class="filtros">
                <!-- Tipo de Propiedad -->
                <div class="grupo-filtro" data-tipo="tipo">
                    <button class="acordeon-titulo">Tipo de Propiedad</button>
                    <div class="acordeon-contenido">
                        <label><input type="checkbox" value="Casa" /> Casa</label><br />
                        <label><input type="checkbox" value="Departamento" /> Departamento</label><br />
                        <label><input type="checkbox" value="Terreno" /> Terreno</label><br />
                        <label><input type="checkbox" value="Local" /> Local</label><br />
                        <label><input type="checkbox" value="PH" /> PH</label><br />
                        <label><input type="checkbox" value="Cochera" /> Cochera</label><br />
                        <label><input type="checkbox" value="Oficina" /> Oficina</label><br />
                        <label><input type="checkbox" value="Quinta" /> Quinta</label><br />
                        <label><input type="checkbox" value="Campo" /> Campo</label><br />
                    </div>
                </div>

                <!-- Tipo de Operación -->
                <div class="grupo-filtro" data-tipo="operacion">
                    <button class="acordeon-titulo">Tipo de Operación</button>
                    <div class="acordeon-contenido">
                        <label><input type="checkbox" value="Alquiler" /> Alquiler</label><br />
                        <label><input type="checkbox" value="AlquilerTemporal" /> Alquiler Temporal</label>
                    </div>
                </div>

                <!-- Precio -->
                <div class="grupo-filtro" data-tipo="precio">
                    <button class="acordeon-titulo">Precio</button>
                    <div class="acordeon-contenido">
                        <div class="mb-3">
                            <label for="selector-moneda" class="form-label">Moneda</label>
                            <select id="selector-moneda" class="form-select">
                                <option value="ARS">$ Pesos</option>
                                <option value="USD">USD Dólares</option>
                            </select>
                        </div>

                        <label class="precio-opcion" data-ars="Menos de $250000" data-usd="Menos de USD$500">
                            <input type="checkbox" value="Menos de $250000" /> <span>Menos de $250000</span>
                        </label><br />

                        <label class="precio-opcion" data-ars="$250000 - $750000" data-usd="USD$500 - USD$1500">
                            <input type="checkbox" value="Entre $250000 - $750000" /> <span>$250000 - $750000</span>
                        </label><br />

                        <label class="precio-opcion" data-ars="Más de $750000" data-usd="Más de USD$1500">
                            <input type="checkbox" value="Más de $750000" /> <span>Más de $750000</span>
                        </label><br />

                        <div class="precio-rango">
                            <input type="number" id="precio-min" class="form-control" placeholder="Mínimo">
                            <input type="number" id="precio-max" class="form-control" placeholder="Máximo">
                            <button id="btn-aplicar-precio" class="btn btn-primary">Aplicar</button>
                        </div>
                    </div>
                </div>

                <!-- Ubicación -->
                <div class="grupo-filtro" data-tipo="ubicacion">
                    <button class="acordeon-titulo">Ubicación</button>
                    <div class="acordeon-contenido">
                        <div class="ubicacion-buscador">
                            <div class="input-group">
                                <input type="text"
                                       id="input-ubicacion"
                                       class="form-control"
                                       placeholder="Buscar provincia, ciudad o barrio..."
                                       autocomplete="off"
                                       data-ubicacion-id=""
                                       data-ubicacion-tipo=""
                                       data-provincia-id=""
                                       data-ciudad-id="">
                            </div>
                            <div id="sugerencias-ubicacion" class="sugerencias-ubicacion"></div>

                        </div>
                    </div>
                </div>

                <!-- Ambientes -->
                <div class="grupo-filtro" data-tipo="ambientes">
                    <button class="acordeon-titulo">Ambientes</button>
                    <div class="acordeon-contenido">
                        <label><input type="checkbox" value="1 ambiente" /> 1 ambiente</label><br />
                        <label><input type="checkbox" value="2 ambientes" /> 2 ambientes</label><br />
                        <label><input type="checkbox" value="3 ambientes" /> 3 ambientes</label><br />
                        <label><input type="checkbox" value="4+ ambientes" /> 4+ ambientes</label>
                    </div>
                </div>

                <!-- Dormitorios -->
                <div class="grupo-filtro" data-tipo="dormitorios">
                    <button class="acordeon-titulo">Dormitorios</button>
                    <div class="acordeon-contenido">
                        <label><input type="checkbox" value="1 dormitorio" /> 1 dormitorio</label><br />
                        <label><input type="checkbox" value="2 dormitorios" /> 2 dormitorios</label><br />
                        <label><input type="checkbox" value="3 dormitorios" /> 3 dormitorios</label><br />
                        <label><input type="checkbox" value="4 dormitorios" /> 4 dormitorios</label><br />
                        <label><input type="checkbox" value="5+ dormitorios" /> 5+ dormitorios</label>
                    </div>
                </div>

                <!-- Baños -->
                <div class="grupo-filtro" data-tipo="banos">
                    <button class="acordeon-titulo">Baños</button>
                    <div class="acordeon-contenido">
                        <label><input type="checkbox" value="1 baño" /> 1 baño</label><br />
                        <label><input type="checkbox" value="2 baños" /> 2 baños</label><br />
                        <label><input type="checkbox" value="3 baños" /> 3 baños</label><br />
                        <label><input type="checkbox" value="4 baños" /> 4 baños</label><br />
                        <label><input type="checkbox" value="5+ baños" /> 5+ baños</label>
                    </div>
                </div>

                <!-- Superficie Total -->
                <div class="grupo-filtro" data-tipo="superficie-total">
                    <button class="acordeon-titulo">Superficie Total</button>
                    <div class="acordeon-contenido">
                        <label><input type="checkbox" value="Menos de 50 m² totales" /> Menos de 50 m²</label><br />
                        <label><input type="checkbox" value="50 - 100 m² totales" /> 50 - 100 m²</label><br />
                        <label><input type="checkbox" value="100 - 200 m² totales" /> 100 - 200 m²</label><br />
                        <label><input type="checkbox" value="Más de 200 m² totales" /> Más de 200 m²</label><br />

                        <div class="precio-rango">
                            <input type="number" id="superficie-total-min" class="form-control" placeholder="Mín m²">
                            <input type="number" id="superficie-total-max" class="form-control" placeholder="Máx m²">
                            <button id="btn-aplicar-superficie-total" class="btn btn-primary">Aplicar</button>
                        </div>
                    </div>
                </div>

                <!-- Superficie Cubierta -->
                <div class="grupo-filtro" data-tipo="superficie-cubierta">
                    <button class="acordeon-titulo">Superficie Cubierta</button>
                    <div class="acordeon-contenido">
                        <label><input type="checkbox" value="Menos de 30 m² cubiertos" /> Menos de 30 m²</label><br />
                        <label><input type="checkbox" value="30 - 60 m² cubiertos" /> 30 - 60 m²</label><br />
                        <label><input type="checkbox" value="60 - 100 m² cubiertos" /> 60 - 100 m²</label><br />
                        <label><input type="checkbox" value="Más de 100 m² cubiertos" /> Más de 100 m²</label><br />

                        <div class="precio-rango">
                            <input type="number" id="superficie-cubierta-min" class="form-control" placeholder="Mín m²">
                            <input type="number" id="superficie-cubierta-max" class="form-control" placeholder="Máx m²">
                            <button id="btn-aplicar-superficie-cubierta" class="btn btn-primary">Aplicar</button>
                        </div>
                    </div>
                </div>

                <!-- Antigüedad -->
                <div class="grupo-filtro" data-tipo="antiguedad">
                    <button class="acordeon-titulo">Antigüedad</button>
                    <div class="acordeon-contenido">
                        <label><input type="checkbox" value="A estrenar" /> A estrenar</label><br />
                        <label><input type="checkbox" value="1 a 10 años" /> 1 a 10 años</label><br />
                        <label><input type="checkbox" value="10 a 25 años" /> 10 a 25 años</label><br />
                        <label><input type="checkbox" value="25 a 50 años" /> 25 a 50 años</label><br />
                        <label><input type="checkbox" value="50 años o más" /> 50 años o más</label>
                    </div>
                </div>

                <!-- OPCIÓN ALTERNATIVA: Todos los features en un solo grupo expandible -->
                <div class="grupo-filtro" data-tipo="features" data-multiples="true">
                    <button class="acordeon-titulo">Características</button>
                    <div class="acordeon-contenido">
                        <!-- Mascotas -->
                        <div class="subgrupo">
                            <h6>Mascotas</h6>
                            <label><input type="checkbox" value="PermiteMascotas" /> Permite mascotas</label><br />
                        </div>

                        <!-- Generales -->
                        <div class="subgrupo">
                            <h6>Generales</h6>
                            <label><input type="checkbox" value="AccesoDiscapacitados" /> Acceso discapacitados</label><br />
                            <label><input type="checkbox" value="AptoProfesional" /> Apto profesional</label><br />
                            <label><input type="checkbox" value="UsoComercial" /> Uso comercial</label><br />
                        </div>

                        <!-- Amenities -->
                        <div class="subgrupo">
                            <h6>Amenities</h6>
                            <label><input type="checkbox" value="Parrilla" /> Parrilla</label><br />
                            <label><input type="checkbox" value="Quincho" /> Quincho</label><br />
                            <label><input type="checkbox" value="Gimnasio" /> Gimnasio</label><br />
                            <label><input type="checkbox" value="Solarium" /> Solarium</label><br />
                            <label><input type="checkbox" value="Hidromasaje" /> Hidromasaje</label><br />
                            <label><input type="checkbox" value="Sauna" /> Sauna</label><br />
                            <label><input type="checkbox" value="PistaDeportiva" /> Pista deportiva</label><br />
                            <label><input type="checkbox" value="SalaJuegos" /> Sala de juegos</label><br />
                        </div>

                        <!-- Confort -->
                        <div class="subgrupo">
                            <h6>Confort</h6>
                            <label><input type="checkbox" value="AireAcondicionado" /> Aire acondicionado</label><br />
                            <label><input type="checkbox" value="Caldera" /> Caldera</label><br />
                            <label><input type="checkbox" value="Termotanque" /> Termotanque</label><br />
                            <label><input type="checkbox" value="Lavavajillas" /> Lavavajillas</label><br />
                            <label><input type="checkbox" value="Alarma" /> Alarma</label><br />
                        </div>

                        <!-- Interiores -->
                        <div class="subgrupo">
                            <h6>Interiores</h6>
                            <label><input type="checkbox" value="Amueblado" /> Amueblado</label><br />
                            <label><input type="checkbox" value="CocinaEquipada" /> Cocina equipada</label><br />
                            <label><input type="checkbox" value="Lavadero" /> Lavadero</label><br />
                            <label><input type="checkbox" value="Baulera" /> Baulera</label><br />
                            <label><input type="checkbox" value="Toilette" /> Toilette</label><br />
                            <label><input type="checkbox" value="Balcon" /> Balcón</label><br />
                            <label><input type="checkbox" value="Terraza" /> Terraza</label><br />
                            <label><input type="checkbox" value="Patio" /> Patio</label><br />
                            <label><input type="checkbox" value="Jardin" /> Jardín</label><br />
                        </div>

                        <!-- Servicios -->
                        <div class="subgrupo">
                            <h6>Servicios</h6>
                            <label><input type="checkbox" value="InternetWifi" /> Internet / WiFi</label><br />
                            <label><input type="checkbox" value="Ascensor" /> Ascensor</label><br />
                            <label><input type="checkbox" value="Vigilancia" /> Vigilancia</label><br />
                            <label><input type="checkbox" value="Limpieza" /> Servicio de limpieza</label><br />
                            <label><input type="checkbox" value="Agua" /> Agua</label><br />
                            <label><input type="checkbox" value="Electricidad" /> Electricidad</label><br />
                        </div>


                    </div>
                </div>
                <div class="grupo-filtro" data-tipo="features-campo" data-multiples="true">
                    <button class="acordeon-titulo">Campo</button>
                    <div class="acordeon-contenido">
                        <label><input type="checkbox" value="Campo_Molino" /> Molino</label><br />
                        <label><input type="checkbox" value="Campo_Manga" /> Manga</label><br />
                        <label><input type="checkbox" value="Campo_Cargador" /> Cargador</label><br />
                        <label><input type="checkbox" value="Campo_Alambrado" /> Alambrado</label><br />
                        <label><input type="checkbox" value="Campo_Galpon" /> Galpón</label><br />
                        <label><input type="checkbox" value="Campo_SistemaRiego" /> Sistema de riego</label><br />
                        <label><input type="checkbox" value="Campo_Agricola" /> Uso agrícola</label><br />
                        <label><input type="checkbox" value="Campo_Ganadero" /> Uso ganadero</label><br />
                        <label><input type="checkbox" value="Campo_Mixto" /> Uso mixto</label><br />
                    </div>
                </div>
            </div>
        </div>

        <!-- COLUMNA DE RESULTADOS -->
        <div class="resultados">
            @if (Model.TieneFiltros)
            {
                <div class="alert alert-info" style="grid-column: 1 / -1;">
                    <strong>Búsqueda activa:</strong>

                    <small class="d-block mt-2">Mostrando @Model.Properties.Count de @Model.TotalPropiedades propiedades</small>
                </div>
            }

            @if (Model.Properties != null && Model.Properties.Any())
            {
                @foreach (var property in Model.Properties)
                {
                    <a asp-page="/Detail" asp-route-id="@property.PropertyId" class="property-item-link">
                        <div class="property-item">
                            <div class="img position-relative">
                                @{
                                    var mainImage = property.Images?.FirstOrDefault(img => img.IsMain)
                                    ?? property.Images?.FirstOrDefault();
                                    var imageUrl = mainImage?.ImageUrl ?? "~/images/default-property.jpg";
                                }
                                <img src="@Url.Content(imageUrl)" alt="@property.Title" />

                                <!-- Badge para precio -->
                                <div class="price-badge position-absolute top-0 end-0 m-2 bg-primary text-white p-2 rounded">
                                    @if (property.Currency == Abig2025.Models.Properties.Enums.CurrencyType.USD)
                                    {
                                        @($"USD ${property.Price:N0}")
                                    }
                                    else
                                    {
                                        @($"${property.Price:N0}")
                                    }
                                    @if (property.Expenses > 0)
                                    {
                                        <small class="d-block">
                                            @if (property.ExpensesCurrency == Abig2025.Models.Properties.Enums.CurrencyType.USD)
                                            {
                                                @($"+USD${property.Expenses:N0} exp.")
                                            }
                                            else
                                            {
                                                @($"+${property.Expenses:N0} exp.")
                                            }
                                        </small>
                                    }
                                </div>
                            </div>

                            <div class="property-content">
                                <!-- Título -->
                                <h5 class="property-title mb-2">@property.Title</h5>

                                <!-- Ubicación -->
                                @{
                                    var locationText = "";
                                    if (!string.IsNullOrEmpty(property.Location?.Street))
                                    {
                                        locationText = $"{property.Location.Street} {property.Location.Number}";
                                    }

                                    var cityProvince = "";
                                    if (property.Location?.City != null)
                                    {
                                        cityProvince = property.Location.City.Name;
                                        if (property.Location.Province != null)
                                        {
                                            cityProvince += $" - {property.Location.Province.Name}";
                                        }
                                    }
                                }

                                @if (!string.IsNullOrEmpty(locationText))
                                {
                                    <p class="text-muted mb-1"><i class="bi bi-geo-alt"></i> @locationText</p>
                                }
                                @if (!string.IsNullOrEmpty(cityProvince))
                                {
                                    <p class="text-muted mb-3"><small>@cityProvince</small></p>
                                }

                                <!-- Características principales -->
                                <div class="property-specs">
                                    @if (property.Bedrooms.HasValue && property.Bedrooms > 0)
                                    {
                                        <div class="spec-item">
                                            <i class="bi bi-door-closed"></i>
                                            <span>@property.Bedrooms dorm.</span>
                                        </div>
                                    }

                                    @if (property.Bathrooms.HasValue && property.Bathrooms > 0)
                                    {
                                        <div class="spec-item">
                                            <i class="bi bi-water"></i>
                                            <span>@property.Bathrooms baños</span>
                                        </div>
                                    }

                                    @if (property.MainRooms.HasValue && property.MainRooms > 0)
                                    {
                                        <div class="spec-item">
                                            <i class="bi bi-house-door"></i>
                                            <span>@property.MainRooms amb.</span>
                                        </div>
                                    }

                                    @if (property.TotalArea.HasValue && property.TotalArea > 0)
                                    {
                                        <div class="spec-item">
                                            <i class="bi bi-arrows-fullscreen"></i>
                                            <span>
                                                @property.TotalArea.Value.ToString("N0")
                                                @(property.PropertyType.ToString() == "Campo" ? "ha" : "m²")
                                            </span>
                                        </div>
                                    }

                                    @if (property.ParkingSpaces.HasValue && property.ParkingSpaces > 0)
                                    {
                                        <div class="spec-item">
                                            <i class="bi bi-car-front"></i>
                                            <span>@property.ParkingSpaces cochera@(property.ParkingSpaces > 1 ? "s" : "")</span>
                                        </div>
                                    }
                                </div>

                                <!-- Tags adicionales -->
                                <div class="property-tags">
                                    <span class="badge bg-secondary">@property.PropertyType</span>
                                    <span class="badge bg-primary">@property.OperationType.ToString().Replace("AlquilerTemporal", "Temporario")</span>

                                    @if (property.IsNew)
                                    {
                                        <span class="badge bg-success">A estrenar</span>
                                    }

                                    @if (property.IsUnderConstruction)
                                    {
                                        <span class="badge bg-warning text-dark">En construcción</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </a>
                }
            }
            else
            {
                <div class="col-12 text-center py-5" style="grid-column: 1 / -1;">
                    <div class="alert alert-warning">
                        <h3>No hay propiedades disponibles</h3>
                        <p>
                            @if (Model.TieneFiltros)
                            {
                                <span>No se encontraron propiedades con los filtros aplicados. Intenta ajustar tus criterios de búsqueda.</span>
                            }
                            else
                            {
                                <span>No hay propiedades publicadas en este momento. Intenta más tarde.</span>
                            }
                        </p>
                        @if (Model.TieneFiltros)
                        {
                            <a href="/Results2" class="btn btn-primary mt-3">Ver todas las propiedades</a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>

    @section Scripts {

        <script src="~/js/modules/initFiltrosFromIndex.js" defer></script>
        <script src="~/js/results.js" type="module"></script>
    }


</div>

