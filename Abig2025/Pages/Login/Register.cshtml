@page
@model Abig2025.Pages.Login.RegisterModel
@{
    Layout = null;
}

<style>


    .google-btn {
        display: flex !important;
        align-items: center;
        justify-content: center;
        width: 100% !important;
        padding: 15px;
        background: white;
        color: #757575;
        border: 2px solid #ddd;
        border-radius: 8px;
        cursor: pointer;
        font-size: 16px;
        font-weight: 500;
        transition: all 0.3s ease;
        margin: 10px 120;
        text-decoration: none;
        box-sizing: border-box;
    }

        .google-btn:hover {
            background: #f8f9fa;
            border-color: #ccc;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transform: translateY(-2px);
        }

        .google-btn img {
            width: 20px;
            height: 20px;
            margin-right: 12px;
        }

    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 25px 0;
        color: #666;
        font-size: 14px;
        width: 100%;
    }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #ddd;
        }

        .divider::before {
            margin-right: 15px;
        }

        .divider::after {
            margin-left: 15px;
        }


    .inner form,
    .google-section {
        width: 100%;
        max-width: 100%;
    }

    /* Botón principal */
    button[type="submit"]:not(.google-btn) {
        width: 100%;
        margin: 20px 0;
    }

    /* LOGO AL COSTADO */
    .logo-container {
        position: absolute !important;
        top: 275px !important;
        right: 40px !important;
        width: auto !important;
        max-width: 270px !important;
        margin: 0 !important;
    }

    .logo {
        max-width: 100%;
        height: auto;
    }

    .password-help-text {
        max-width: 250px;
        margin-top: 0.5rem;
    }

        .password-help-text .form-text {
            max-width: 100%;
            font-size: 0.8em;
            line-height: 1.3;
        }
</style>

<head>
    <meta charset="utf-8">
    <title>Abig - Registro</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <link rel="stylesheet" href="~/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
    <!-- STYLE CSS -->
    <link rel="stylesheet" href="~/css/styleRegister.css">
</head>



<body>
    <div class="wrapper">
        <div class="inner">
            <a href="Login" class="back-arrow">
                <i class="zmdi zmdi-arrow-left"></i>
                Atrás
            </a>

            <form method="post">
                <h3>Registro</h3>

                <!-- Mensajes de éxito/error -->
                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="alert alert-success">
                        @Model.SuccessMessage
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        @Model.ErrorMessage
                    </div>
                }

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Honeypot field (hidden) -->
                <input type="text" asp-for="Input.Honeypot" class="honeypot" autocomplete="off" tabindex="-1">

                <div class="form-group">
                    <div class="form-wrapper">
                        <label asp-for="Input.FirstName">Nombre</label>
                        <input type="text" asp-for="Input.FirstName" class="form-control">
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-wrapper">
                        <label asp-for="Input.LastName">Apellido</label>
                        <input type="text" asp-for="Input.LastName" class="form-control">
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-wrapper">
                    <label asp-for="Input.Email">Email</label>
                    <input type="email" asp-for="Input.Email" class="form-control">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-wrapper">
                    <label asp-for="Input.Password">Contraseña</label>
                    <input type="password" asp-for="Input.Password" class="form-control">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <div class="password-help-text">
                        <small class="form-text text-muted">
                            La contraseña debe tener al menos 8 caracteres, incluir mayúsculas, minúsculas, números y caracteres especiales.
                        </small>
                    </div>
                </div>

                <div class="form-wrapper">
                    <label asp-for="Input.ConfirmPassword">Confirmar Contraseña</label>
                    <input type="password" asp-for="Input.ConfirmPassword" class="form-control">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-wrapper">
                    <div class="checkbox-group">
                        <div class="checkbox-item">
                            <input type="checkbox" asp-for="Input.AcceptTerms" id="AcceptTerms" />
                            <label for="AcceptTerms" class="checkbox-label">
                                Acepto los <a asp-page="/TermsAndConditions" target="_blank">Términos y Condiciones</a>.
                            </label>
                        </div>
                        <span asp-validation-for="Input.AcceptTerms" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-wrapper">
                    <div class="checkbox-group">
                        <div class="checkbox-item">
                            <input type="checkbox" asp-for="Input.AcceptPrivacy" id="AcceptPrivacy" />
                            <label for="AcceptPrivacy" class="checkbox-label">
                                Acepto la <a asp-page="/Privacy" target="_blank">Política de Privacidad</a>.
                            </label>
                        </div>
                        <span asp-validation-for="Input.AcceptPrivacy" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn-register">Crear cuenta</button>

                <div class="login-link">
                    ¿Ya tienes una cuenta? <a asp-page="/Login/login">Inicia sesión aquí</a>
                </div>
            </form>

            <div class="divider">O </div>
            <form method="post" asp-page-handler="GoogleLogin">
                <button type="submit" class="google-btn soft-hover">
                    <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google">
                    Registrarse con Google
                </button>
            </form>

            <div class="logo-container">
                <a asp-page="/Index">
                    <img src="~/images/Logos/Logo2.png" alt="Logo" class="logo">
                </a>
            </div>
        </div>
    </div>

    <!-- Scripts de validación -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <!-- Script para debugging -->
    <script>
        $(document).ready(function() {
            console.log('jQuery cargado:', !!window.jQuery);
            console.log('jQuery Validation cargado:', !!window.jQuery.validator);

            $('form').on('submit', function(e) {
                console.log('Formulario enviado');
                console.log('Validación:', $(this).valid());
            });
        });
    </script>
</body>
