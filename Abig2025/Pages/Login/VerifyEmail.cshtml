﻿@* Pages/Login/VerifyEmail.cshtml *@
@page
@model Abig2025.Pages.Login.VerifyEmailModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>Verificar Email - Abig</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/css/auth-confirmation-styles.css">
   
</head>

<body>
    <div class="wrapper" style="background-image: url('~/images/Register/bg-registration-form-2.jpg');">
        <div class="inner">
            <!-- Logo -->
            <div class="logo-container">
                <a asp-page="/Index">
                    <img src="~/images/Logos/Logo2.png" alt="Logo" class="logo">
                </a>
            </div>

            <!-- Contenido principal -->
            <div class="verification-content">
                @if (Model.IsSuccess)
                {
                    <h1 class="verification-title success-title">¡Verificación Exitosa!</h1>


                    <!-- Contenedor de éxito -->
                    <div class="status-container success-container">

                        <p class="status-detail">
                            <strong>@Model.Message</strong><br>
                            Tu dirección de correo electrónico ha sido verificada correctamente. 
                           
                        </p>
                    </div>

                    <div class="verification-message">
                        ¿Listo para comenzar?
                    </div>

                    <a asp-page="/Login/Login" class="btn-verification btn-success">
                        <i class="zmdi zmdi-account"></i>
                        Iniciar Sesión
                    </a>
                }
                else
                {
                    <h1 class="verification-title error-title">Error de Verificación</h1>

      

                    <!-- Contenedor de error -->
                    <div class="status-container error-container">
      
                        <p class="status-detail">
                            <strong>@Model.Message</strong><br>
                            No pudimos verificar tu dirección de correo electrónico. 
                            Esto puede deberse a que el enlace ha expirado o ya ha sido utilizado.
                        </p>
                    </div>


                    <a asp-page="/Login/Login" class="btn-verification btn-error">
                        <i class="zmdi zmdi-arrow-left"></i>
                        Volver al Login
                    </a>
                }
            </div>
        </div>
    </div>
</body>
</html>