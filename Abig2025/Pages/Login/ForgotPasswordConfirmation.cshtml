@page
@model Abig2025.Pages.Login.ForgotPasswordConfirmationModel
@{
    Layout = null;
    ViewData["Title"] = "Correo enviado";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>Abig - Correo Enviado</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
    
    <link rel="stylesheet" href="~/css/auth-confirmation-styles.css">
   
</head>

<body>
    <div class="wrapper" style="background-image: url('~/images/Register/bg-registration-form-2.jpg');">
        <div class="inner">
            <!-- Logo -->
            <div class="logo-container">
                <a asp-page="/Index">
                    <img src="~/images/Logos/Logo2.png" alt="Logo" class="logo">
                </a>
            </div>

            <!-- Contenido principal -->
            <div class="success-container">
      

                <h1 class="success-title">Correo Enviado</h1>

                <p class="success-message">
                    Hemos enviado las instrucciones para restablecer tu contraseña
                </p>

                <!-- Contenedor especial para instrucciones -->
                <div class="instructions-container">
                    <h2 class="instructions-title">
                        <i class="zmdi zmdi-assignment instructions-icon"></i>
                        Sigue estos pasos
                    </h2>
                    
                    <div class="steps-list">
                        <div class="step-item">
                            <div class="step-number">1</div>
                            <div>Revisa tu bandeja de entrada</div>
                        </div>
                        <div class="step-item">
                            <div class="step-number">2</div>
                            <div>Busca el email de "Restablecimiento de Contraseña - Abig"</div>
                        </div>
                        <div class="step-item">
                            <div class="step-number">3</div>
                            <div>Haz clic en el enlace dentro del correo</div>
                        </div>
                        <div class="step-item">
                            <div class="step-number">4</div>
                            <div>Crea tu nueva contraseña en la página que se abrirá</div>
                        </div>
                    </div>

                    <div class="resend-container">
                        <form method="post" asp-page-handler="Resend">
                            <input type="hidden" name="Email" value="@Model.Email" />
                            <p class="resend-message">
                                ¿No recibiste el correo?
                                <button type="submit" class="resend-link">Reenviar </button>
                            </p>
                        </form>

                        <!-- Mensajes de estado -->
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success">
                                @TempData["SuccessMessage"]
                            </div>
                        }
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">
                                @TempData["ErrorMessage"]
                            </div>
                        }
                    </div>
                </div>



       
            </div>
        </div>
    </div>
</body>
</html>