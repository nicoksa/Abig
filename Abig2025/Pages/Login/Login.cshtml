@page
@model Abig2025.Pages.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Abig - Iniciar Sesión</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link rel="stylesheet" href="~/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

    <!-- STYLE CSS -->
    <link rel="stylesheet" href="~/css/styleRegister.css">
</head>

<body>
    <div class="wrapper" style="background-image: url('~/images/Register/bg-registration-form-2.jpg');">
        <div class="inner">
            <a href="/Index" class="back-arrow">
                <i class="zmdi zmdi-arrow-left"></i>
                Atrás
            </a>

            <form method="post">
                <h3>Iniciar Sesión</h3>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-wrapper">
                    <label asp-for="Input.Email">Email</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-wrapper">
                    <label asp-for="Input.Password">Contraseña</label>
                    <input asp-for="Input.Password" type="password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group" style="justify-content: space-between; margin-bottom: 20px;">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Input.RememberMe" /> Recordarme
                            <span class="checkmark"></span>
                        </label>
                    </div>
                </div>

                <a asp-page="ForgotPassword" style="color: #007bff; text-decoration: underline;">
                    ¿Olvidaste tu contraseña?
                </a>

                <button type="submit">Ingresar</button>

                <div style="text-align: center; margin-top: 20px;">
                    <p>
                        ¿No tienes una cuenta?
                        <a asp-page="Register" style="color: #007bff; text-decoration: underline;">
                            Regístrate aquí
                        </a>
                    </p>
                </div>
            </form>

            <div class="logo-container">
                <a asp-page="/Index">
                    <img src="~/images/Logos/Logo2.png" alt="Logo" class="logo">
                </a>
            </div>
        </div>
    </div>

    <!-- Scripts de validación -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>