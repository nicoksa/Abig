@page
@model Abig2025.Pages.LoginModel
@{
    Layout = null;
}

<style>

    .google-btn {
        display: flex !important;
        align-items: center;
        justify-content: center;
        width: 100% !important;
        padding: 15px;
        background: white;
        color: #757575;
        border: 2px solid #ddd;
        border-radius: 8px;
        cursor: pointer;
        font-size: 16px;
        font-weight: 500;
        transition: all 0.3s ease;
        margin: 10px 120;
        text-decoration: none;
        box-sizing: border-box;
        
    }

        .google-btn:hover {
            background: #f8f9fa;
            border-color: #ccc;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transform: translateY(-2px);
        }

        .google-btn img {
            width: 20px;
            height: 20px;
            margin-right: 12px;
        }

    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 25px 0;
        color: #666;
        font-size: 14px;
        width: 100%;
    }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #ddd;
        }

        .divider::before {
            margin-right: 15px;
        }

        .divider::after {
            margin-left: 15px;
        }


        .inner form,
        .google-section {
            width: 100%;
            max-width: 100%;
          
        }

    /* Botón principal */
    button[type="submit"]:not(.google-btn) {
        width: 100%;
        margin: 20px 0;
    }

    /* LOGO AL COSTADO */
    .logo-container {
        position: absolute !important;
        top: 130px !important;
        right: 40px !important;
        width: auto !important;
        max-width: 270px !important;
        margin: 0 !important;
    }

    .logo {
        max-width: 100%;
        height: auto;
    }

  
</style>

<head>
    <meta charset="utf-8">
    <title>Abig - Iniciar Sesión</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="~/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
    <!-- STYLE CSS -->
    <link rel="stylesheet" href="~/css/styleRegister.css">

</head>

<body>
    <div class="wrapper" style="background-image: url('~/images/Register/bg-registration-form-2.jpg');">
        <div class="inner">
            <a href="/Index" class="back-arrow">
                <i class="zmdi zmdi-arrow-left"></i>
                Atrás
            </a>

            <form method="post">
                @Html.AntiForgeryToken()
                <h3>Iniciar Sesión</h3>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-wrapper">
                    <label asp-for="Input.Email">Email</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-wrapper">
                    <label asp-for="Input.Password">Contraseña</label>
                    <input asp-for="Input.Password" type="password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-wrapper">
                    <div class="form-checkbox-wrapper">
                        <input type="checkbox" asp-for="Input.RememberMe" id="RememberMe" />
                        <label for="RememberMe" class="checkbox-label">
                            Recordarme
                        </label>
                    </div>
                    <span asp-validation-for="Input.RememberMe" class="text-danger"></span>
                </div>

                <a asp-page="ForgotPassword" style="color: #007bff; text-decoration: underline;">
                    ¿Olvidaste tu contraseña?
                </a>

                <button type="submit">Ingresar</button>




                <div style="text-align: center; margin-top: 20px;">
                    <p>
                        ¿No tienes una cuenta?
                        <a asp-page="Register" style="color: #007bff; text-decoration: underline;">
                            Regístrate aquí
                        </a>
                    </p>
                </div>
            </form>

            <div class="google-section">
                <div class="divider">O </div>

                <form method="post" asp-page-handler="GoogleLogin">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="google-btn soft-hover">
                        <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google">
                        Continuar con Google
                    </button>
                </form>
            </div>

            <div class="logo-container">
                <a asp-page="/Index">
                    <img src="~/images/Logos/Logo2.png" alt="Logo" class="logo">
                </a>
            </div>
        </div>
    </div>

    <!-- Scripts de validación -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
