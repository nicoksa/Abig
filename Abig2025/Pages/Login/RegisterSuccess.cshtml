@page
@model Abig2025.Pages.Login.RegisterSuccessModel
@{
    Layout = null;
    ViewData["Title"] = "Registro exitoso";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>Abig - Registro Exitoso</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/css/auth-confirmation-styles.css">
 
</head>

<body>
    <div class="wrapper" style="background-image: url('~/images/Register/bg-registration-form-2.jpg');">
        <div class="inner">
            <!-- Logo -->
            <div class="logo-container">
                <a asp-page="/Index">
                    <img src="~/images/Logos/Logo2.png" alt="Logo" class="logo">
                </a>
            </div>

            <!-- Contenido principal -->
            <div class="success-container">
               

                <p class="success-message">
                    Tu cuenta ha sido creada exitosamente
                </p>

                <!-- Contenedor especial para verificación de correo -->
                <div class="verification-container">
                    <h2 class="verification-title">
                        <i class="zmdi zmdi-email verification-icon"></i>
                        Verificación Requerida
                    </h2>
                    <p class="verification-message">
                        <strong>Por favor, verifica tu correo electrónico para activar tu cuenta y poder iniciar sesión.</strong><br>
                        Hemos enviado un enlace de verificación a tu dirección de correo electrónico.
                    </p>      
                </div>
            </div>
            <div class="resend-container">
                <form method="post" asp-page-handler="ResendVerification">
                    <input type="hidden" name="Email" value="@Model.Email" />
                    <p class="resend-message">
                        ¿No recibiste el correo de verificación?
                        <button type="submit" class="resend-link">Reenviar correo de verificación</button>
                    </p>
                </form>

                <!-- Mensajes de estado -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }
                @if (TempData["WarningMessage"] != null)
                {
                    <div class="alert alert-warning">
                        @TempData["WarningMessage"]
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>