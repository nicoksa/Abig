@page
@model Abig2025.Pages.Login.ForgotPasswordModel
@{
    Layout = null;
    ViewData["Title"] = "Recuperar contraseña";
}


<head>
    <meta charset="utf-8">
    <title>Abig - Recuperar Contraseña</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link rel="stylesheet" href="~/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

    <!-- STYLE CSS -->
    <link rel="stylesheet" href="~/css/styleRegister.css">
</head>

<body>
    <div class="wrapper" style="background-image: url('~/images/Register/bg-registration-form-2.jpg');">
        <div class="inner">

            <a href="Login" class="back-arrow">
                <i class="zmdi zmdi-arrow-left"></i>
                Atrás
            </a>

            <form action="">
                <h3>Recuperar Contraseña</h3>
                <p style="text-align: center; margin-bottom: 25px; color: #666;">
                    Ingresa tu dirección de correo electrónico y te enviaremos un enlace para restablecer tu contraseña.
                </p>

                <div class="form-wrapper">
                    <label for="">Email</label>
                    <input type="email" class="form-control" placeholder="tu@email.com" required>
                </div>

                <button type="submit">Enviar enlace</button>

                <div style="text-align: center; margin-top: 20px;">
                    <p>¿Recordaste tu contraseña? <a asp-page="Login" style="color: #007bff; text-decoration: underline;">Iniciar sesión</a></p>
                </div>
            </form>

            <div class="logo-container">
                <a asp-page="/Index">
                    <img src="~/images/Logos/Logo2.png" alt="Logo" class="logo">
                </a>
            </div>
        </div>
    </div>
</body>
