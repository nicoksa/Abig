@page "{draftId?}"
@model Abig2025.Pages.Post.PostStep4Model
@{
    ViewData["Title"] = "Resumen de publicación";
}

<link rel="stylesheet" href="~/css/stylePost.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<br />
<br />
<div class="container mt-5 pt-5">
    <!-- Encabezado con ícono -->
    <div class="text-center mb-5">

        <h1 class="fw-bold display-5 mb-3">Revisa tu publicación</h1>
        <p class="lead text-muted fs-5">Un último vistazo antes de que tu propiedad esté visible</p>
    </div>

    <div class="row g-4">
        <!-- Columna izquierda: Resumen detallado -->
        <div class="col-lg-8">
            <!-- Card de información principal -->
            <div class="card border-0 shadow-lg mb-4">
                <div class="card-header bg-white border-0 py-4">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                                <i class="bi bi-house-door-fill text-primary fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h3 class="card-title fw-bold mb-2">@Model.DraftData.Title</h3>
                            <div class="d-flex align-items-center text-muted">
                                <i class="bi bi-geo-alt me-2"></i>
                                <span>
                                    @if (!string.IsNullOrEmpty(Model.DraftData.Street))
                                    {
                                        <span>@Model.DraftData.Street @Model.DraftData.Number, </span>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.DraftData.City))
                                    {
                                        <span>@Model.DraftData.City</span>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.DraftData.Province))
                                    {
                                        <span>, @Model.DraftData.Province</span>
                                    }
                                </span>
                            </div>
                        </div>
                        <div class="flex-shrink-0">
                            <span class="badge bg-primary bg-opacity-10 text-primary fs-6 px-3 py-2">
                                @Model.DraftData.PropertyType
                            </span>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Sección de precio -->
                    <div class="alert alert-primary bg-primary bg-opacity-10 border-0 mb-4">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h4 class="fw-bold text-primary mb-1">
                                    $@Model.DraftData.Price.ToString("N0") @Model.DraftData.Currency
                                </h4>
                                <p class="text-muted mb-0">
                                    <i class="bi bi-tag me-2"></i>
                                    @Model.DraftData.OperationType
                                    @if (Model.DraftData.Expenses > 0)
                                    {
                                        <span class="ms-3">
                                            <i class="bi bi-building me-1"></i>
                                            Expensas: $@Model.DraftData.Expenses @Model.DraftData.ExpensesCurrency
                                        </span>
                                    }
                                </p>
                            </div>
                            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                                <span class="badge bg-success bg-opacity-25 text-success fs-6 px-3 py-2">
                                    <i class="bi bi-check-circle me-1"></i>
                                    Precio configurado
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Resumen de características principales -->
                    @if (Model.DraftData.MainRooms > 0 || Model.DraftData.Bedrooms > 0 || 
                         Model.DraftData.Bathrooms > 0 || Model.DraftData.TotalArea > 0)
                    {
                        <div class="row g-3 mb-4">
                            @if (Model.DraftData.MainRooms > 0)
                            {
                                <div class="col-6 col-md-3">
                                    <div class="card border-0 bg-light h-100">
                                        <div class="card-body text-center py-3">
                                            <div class="text-primary mb-2">
                                                <i class="bi bi-door-open fs-3"></i>
                                            </div>
                                            <h4 class="fw-bold mb-1">@Model.DraftData.MainRooms</h4>
                                            <p class="text-muted small mb-0">Ambientes</p>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (Model.DraftData.Bedrooms > 0)
                            {
                                <div class="col-6 col-md-3">
                                    <div class="card border-0 bg-light h-100">
                                        <div class="card-body text-center py-3">
                                            <div class="text-primary mb-2">
                                                <i class="bi bi-moon fs-3"></i>
                                            </div>
                                            <h4 class="fw-bold mb-1">@Model.DraftData.Bedrooms</h4>
                                            <p class="text-muted small mb-0">Dormitorios</p>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (Model.DraftData.Bathrooms > 0)
                            {
                                <div class="col-6 col-md-3">
                                    <div class="card border-0 bg-light h-100">
                                        <div class="card-body text-center py-3">
                                            <div class="text-primary mb-2">
                                                <i class="bi bi-thermometer-half fs-3"></i>
                                            </div>
                                            <h4 class="fw-bold mb-1">@Model.DraftData.Bathrooms</h4>
                                            <p class="text-muted small mb-0">Baños</p>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (Model.DraftData.TotalArea > 0)
                            {
                                <div class="col-6 col-md-3">
                                    <div class="card border-0 bg-light h-100">
                                        <div class="card-body text-center py-3">
                                            <div class="text-primary mb-2">
                                                <i class="bi bi-arrows-fullscreen fs-3"></i>
                                            </div>
                                            <h4 class="fw-bold mb-1">@Model.DraftData.TotalArea</h4>
                                            <p class="text-muted small mb-0">
                                                @(Model.DraftData.PropertyType.ToString() == "Campo" ? "Hectáreas" : "m² totales")
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    <!-- Características adicionales -->
                    @{
                        var additionalFeatures = new List<string>();
                        
                        if (Model.DraftData.CoveredArea > 0)
                        {
                            additionalFeatures.Add($"Superficie cubierta: {Model.DraftData.CoveredArea} m²");
                        }
                        
                        if (Model.DraftData.ParkingSpaces > 0)
                        {
                            additionalFeatures.Add($"Cocheras: {Model.DraftData.ParkingSpaces}");
                        }
                        
                        if (Model.DraftData.Age > 0)
                        {
                            additionalFeatures.Add($"Antigüedad: {Model.DraftData.Age} años");
                        }
                        
                        if (Model.DraftData.IsNew)
                        {
                            additionalFeatures.Add("A estrenar");
                        }
                        
                        if (Model.DraftData.IsUnderConstruction)
                        {
                            additionalFeatures.Add("En construcción");
                        }
                    }

                    @if (additionalFeatures.Any())
                    {
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-white border-0 py-3">
                                <h5 class="fw-bold mb-0">
                                    <i class="bi bi-list-check text-primary me-2"></i>
                                    Características adicionales
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    @foreach (var feature in additionalFeatures)
                                    {
                                        <div class="col-md-6 mb-2">
                                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                                            <span>@feature</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Imágenes -->
                    @if (Model.DraftData.TempImages?.Count > 0)
                    {
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-white border-0 py-3">
                                <h5 class="fw-bold mb-0">
                                    <i class="bi bi-images text-primary me-2"></i>
                                    Galería de imágenes
                                    <span class="badge bg-primary bg-opacity-10 text-primary ms-2">
                                        @Model.DraftData.TempImages.Count imágenes
                                    </span>
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    @for (int i = 0; i < Math.Min(4, Model.DraftData.TempImages.Count); i++)
                                    {
                                        <div class="col-6 col-md-3">
                                            <div class="position-relative">
                                                <img src="~/uploads/temp/@Model.DraftData.TempImages[i].FileName"
                                                     class="img-fluid rounded-3 shadow-sm w-100"
                                                     style="height: 150px; object-fit: cover;"
                                                     alt="Imagen @(i + 1)"
                                                     onerror="this.onerror=null; this.src='data:image/svg+xml;base64,'">
                                                @if (i == 0)
                                                {
                                                    <span class="badge bg-primary position-absolute top-0 start-0 m-2">
                                                        <i class="bi bi-star-fill"></i> Principal
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                    }
                                    @if (Model.DraftData.TempImages.Count > 4)
                                    {
                                        <div class="col-6 col-md-3">
                                            <div class="d-flex align-items-center justify-content-center bg-light rounded-3 h-100"
                                                 style="height: 150px;">
                                                <div class="text-center">
                                                    <i class="bi bi-plus-circle fs-1 text-muted opacity-50"></i>
                                                    <p class="small text-muted mt-2">
                                                        +@(Model.DraftData.TempImages.Count - 4) más
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Video -->
                    @if (!string.IsNullOrEmpty(Model.DraftData.VideoUrl))
                    {
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-white border-0 py-3">
                                <h5 class="fw-bold mb-0">
                                    <i class="bi bi-camera-reels text-primary me-2"></i>
                                    Video de la propiedad
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="alert alert-info mb-3">
                                    <i class="bi bi-info-circle me-2"></i>
                                    Video incluido: @Model.DraftData.VideoUrl
                                </div>
                                <div class="ratio ratio-16x9">
                                    <iframe src="@GetEmbedUrl(Model.DraftData.VideoUrl)" 
                                            frameborder="0" 
                                            allowfullscreen></iframe>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Características seleccionadas (features)  -->
                    @if (Model.SelectedFeatureDefinitions.Any())
                    {
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-white border-0 py-3">
                                <h5 class="fw-bold mb-0">
                                    <i class="bi bi-check2-square text-primary me-2"></i>
                                    Servicios y comodidades
                                    <span class="badge bg-primary bg-opacity-10 text-primary ms-2">
                                        @Model.SelectedFeatureDefinitions.Count seleccionados
                                    </span>
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    @foreach (var feature in Model.SelectedFeatureDefinitions.OrderBy(f => f.DisplayOrder))
                                    {
                                        <div class="col-md-6 mb-2">
                                            <div class="d-flex align-items-start">
                                                @if (!string.IsNullOrEmpty(feature.Icon))
                                                {
                                                    <i class="@feature.Icon text-success me-2 mt-1"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-check-circle-fill text-success me-2 mt-1"></i>
                                                }
                                                <span>@feature.DisplayName</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Descripción -->
                    @if (!string.IsNullOrEmpty(Model.DraftData.Description))
                    {
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white border-0 py-3">
                                <h5 class="fw-bold mb-0">
                                    <i class="bi bi-text-paragraph text-primary me-2"></i>
                                    Descripción
                                </h5>
                            </div>
                            <div class="card-body">
                                <p class="mb-0">@Model.DraftData.Description</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Columna derecha: Panel de acción -->
        <div class="col-lg-4">
            <!-- Card de confirmación -->
            <div class="card border-0 shadow-lg sticky-top" style="top: 100px;">
                <div class="card-header bg-white border-0 py-4">
                    <h4 class="fw-bold text-center mb-0">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        ¡Todo listo!
                    </h4>
                </div>
                <div class="card-body p-4">
                    <!-- Info del plan -->
 
                    <div class="mb-4">
                        <h6 class="fw-bold text-muted mb-3">
                            <i class="bi bi-rocket-takeoff me-2"></i>
                            Tu plan actual
                        </h6>
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-primary bg-opacity-10 border-0 pb-3">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0 me-3">
                                        <i class="bi bi-award-fill text-primary fs-4"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="fw-bold mb-1 text-dark">@Model.CurrentSubscription?.Plan?.Name</h5>
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-success bg-opacity-10 text-success me-2">
                                                <i class="bi bi-check-circle me-1"></i>
                                                Activo
                                            </span>
                                            @if (Model.CurrentSubscription?.EndDate != null)
                                            {
                                                <small class="text-muted">
                                                    <i class="bi bi-calendar-check me-1"></i>
                                                    Hasta @Model.CurrentSubscription.EndDate.ToString("dd/MM/yyyy")
                                                </small>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <!-- Estadísticas del plan -->
                                <div class="row text-center">
                                    <div class="col-6 border-end">
                                        <div class="mb-2">
                                            <i class="bi bi-megaphone fs-4 text-primary"></i>
                                        </div>
                                        <h4 class="fw-bold text-dark mb-1">@Model.RemainingPublications</h4>
                                        <small class="text-muted d-block">Disponibles</small>
                                    </div>
                                    <div class="col-6">
                                        <div class="mb-2">
                                            <i class="bi bi-clock fs-4 text-primary"></i>
                                        </div>
                                        @if (Model.CurrentSubscription?.Plan?.DurationDays > 0)
                                        {
                                            <h4 class="fw-bold text-dark mb-1">@Model.CurrentSubscription.Plan.DurationDays</h4>
                                            <small class="text-muted d-block">Días</small>
                                        }
                                        else
                                        {
                                            <h4 class="fw-bold text-dark mb-1">∞</h4>
                                            <small class="text-muted d-block">Ilimitado</small>
                                        }
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>

                    <!-- Checklist de verificación -->
                    <div class="mb-4">
                        <h6 class="fw-bold text-muted mb-3">
                            <i class="bi bi-clipboard-check me-2"></i>
                            Verificación final
                        </h6>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                @if (!string.IsNullOrEmpty(Model.DraftData.Title) && Model.DraftData.Price > 0)
                                {
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                }
                                else
                                {
                                    <i class="bi bi-exclamation-circle-fill text-warning me-2"></i>
                                }
                                <span class="text-muted">Datos principales</span>
                            </li>
                            <li class="mb-2">
                                @if (Model.DraftData.TempImages?.Count > 0)
                                {
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                }
                                else
                                {
                                    <i class="bi bi-exclamation-circle-fill text-warning me-2"></i>
                                }
                                <span class="text-muted">Imágenes subidas</span>
                            </li>
                            <li class="mb-2">
                                @if (Model.CanPublish)
                                {
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                }
                                else
                                {
                                    <i class="bi bi-x-circle-fill text-danger me-2"></i>
                                }
                                <span class="text-muted">Plan activo disponible</span>
                            </li>
                        </ul>
                    </div>

                    <!-- Botones de acción -->
                    <div class="mt-4 pt-3 border-top">
                        <form method="post">
                            <div class="d-grid gap-3">
                                @if (Model.CanPublish)
                                {
                                    <button type="submit" asp-page-handler="Publish"
                                            class="btn btn-success btn-lg py-3 fw-bold shadow-sm">
                                        <i class="bi bi-check-circle me-2"></i>
                                        Confirmar y publicar
