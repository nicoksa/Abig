@page
@model Abig2025.Pages.Post.CheckPlanModel
@{
    ViewData["Title"] = "Verificando plan...";
}

<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <h4 class="mt-3">Verificando tu plan...</h4>
            <p class="text-muted">Redirigiendo en unos segundos</p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-redirección por si falla JavaScript
        setTimeout(function() {
            window.location.href = '@Url.Page("/Post/Plans")';
        }, 3000);
    </script>
}