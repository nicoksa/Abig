@page "{draftId?}"
@model Abig2025.Pages.Post.PostStep3Model
@{
    ViewData["Title"] = "Publicar Inmueble - Paso 3";
}

<link rel="stylesheet" href="~/css/stylePost.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">


<br />
<br />
<br />
<br />
<div class="container mt-4 pt-5">
    <!-- Campo oculto para draft -->
    <input type="hidden" asp-for="DraftId" />



    <div class="row justify-content-center" style="padding-top:35px">
        <div class="col-lg-10">
            <!-- Encabezado -->
            <div class="d-flex align-items-center mb-5 p-4 bg-white rounded-3 shadow-sm border-start border-4 border-primary">
                <div class="flex-shrink-0 me-4">
                    <i class="bi bi-list-check fs-1 text-primary"></i>
                </div>
                <div>
                    <h1 class="fw-bold mb-2 text-primary">¡Agregá las comodidades de tu propiedad!</h1>
                    <p class="lead text-muted mb-0">Seleccioná los servicios y características disponibles</p>
                </div>
            </div>

            <!-- Mostrar errores de validación -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <h5 class="alert-heading">Errores:</h5>
                    <ul class="mb-0">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <!-- Etiquetas seleccionadas -->
            <div id="selected-tags-container" class="card mb-4" style="display: none;">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Características seleccionadas:</h5>
                </div>
                <div class="card-body">
                    <div id="selected-tags" class="d-flex flex-wrap gap-2">
                        <!-- Las etiquetas se llenarán con JavaScript -->
                    </div>
                </div>
            </div>

            <!-- Formulario de servicios -->
            <form method="post" id="featuresForm">
                <input type="hidden" asp-for="DraftId" />

                <!-- =========================
                     PERMITE MASCOTAS
                     ========================= -->
                @{
                    var mascotas = Model.FeatureDefinitions
                    .FirstOrDefault(f => f.Group == "Mascotas");

                    if (mascotas != null)
                    {
                        var mascotasValue = Model.Data.Features
                        .FirstOrDefault(f => f.FeatureDefinitionId == mascotas.FeatureDefinitionId)
                        ?.Value == "true";

                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="@mascotas.Icon me-2"></i>@mascotas.DisplayName
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check form-switch">
                            <input class="form-check-input feature-checkbox"
                                   type="checkbox"
                                   id="feature_@mascotas.FeatureDefinitionId"
                                   name="feature_@mascotas.FeatureDefinitionId"
                                   value="true"
                                   @(mascotasValue ? "checked" : "") />
                            <label class="form-check-label" for="feature_@mascotas.FeatureDefinitionId">
                                La propiedad permite mascotas
                            </label>
                        </div>
                    </div>
                </div>
                    }
                }

                <!-- =========================
                     CARACTERÍSTICAS GENERALES
                     ========================= -->
                @{
                    var generales = Model.FeatureDefinitions
                    .Where(f => f.Group == "Generales")
                    .ToList();

                    if (generales.Any())
                    {
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Características generales</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var feature in generales)
                            {
                                var value = Model.Data.Features
                                .FirstOrDefault(f => f.FeatureDefinitionId == feature.FeatureDefinitionId)
                                ?.Value == "true";

                                <div class="col-md-4 mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input feature-checkbox"
                                               type="checkbox"
                                               id="feature_@feature.FeatureDefinitionId"
                                               name="feature_@feature.FeatureDefinitionId"
                                               value="true"
                                               @(value ? "checked" : "") />

                                        <label class="form-check-label" for="feature_@feature.FeatureDefinitionId">
                                            <i class="@feature.Icon me-2"></i>
                                            @feature.DisplayName
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                    }
                }

                <!-- =========================
                     RESTO DE GRUPOS
                     ========================= -->
                @foreach (var group in new[] { "Amenities", "Confort", "Interiores", "Servicios", "Campo" })
                {
                    var features = Model.FeatureDefinitions
                    .Where(f => f.Group == group)
                    .ToList();

                    if (features.Any())
                    {
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">@group</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var feature in features)
                            {
                                var value = Model.Data.Features
                                .FirstOrDefault(f => f.FeatureDefinitionId == feature.FeatureDefinitionId)
                                ?.Value == "true";

                                <div class="col-md-4 mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input feature-checkbox"
                                               type="checkbox"
                                               id="feature_@feature.FeatureDefinitionId"
                                               name="feature_@feature.FeatureDefinitionId"
                                               value="true"
                                               @(value ? "checked" : "") />

                                        <label class="form-check-label" for="feature_@feature.FeatureDefinitionId">
                                            <i class="@feature.Icon me-2"></i>
                                            @feature.DisplayName
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                    }
                }

                <!-- Botones de navegación -->
                <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                    <!-- Botón para volver al paso 2 -->
                    <button type="submit" asp-page-handler="Back" 
                            class="btn btn-outline-secondary px-4 py-2">
                        <i class="bi bi-arrow-left me-2"></i>Anterior
                    </button>

                    <!-- Botón para continuar al paso 4 -->
                    <button type="submit" class="btn btn-primary px-4 py-2">
                        Siguiente <i class="bi bi-arrow-right ms-2"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Mostrar etiquetas seleccionadas
        document.addEventListener('DOMContentLoaded', function() {
            updateSelectedTags();
            
            // Agregar event listeners a todos los checkboxes
            document.querySelectorAll('.feature-checkbox').forEach(checkbox => {
                checkbox.addEventListener('change', updateSelectedTags);
            });
        });

        function updateSelectedTags() {
            const container = document.getElementById('selected-tags-container');
            const tagsContainer = document.getElementById('selected-tags');
            
            if (!tagsContainer) return;
            
            tagsContainer.innerHTML = '';

            const checkedBoxes = document.querySelectorAll('.feature-checkbox:checked');

            if (checkedBoxes.length > 0) {
                container.style.display = 'block';

                checkedBoxes.forEach(checkbox => {
                    const label = document.querySelector(`label[for="${checkbox.id}"]`);
                    if (label) {
                        const labelText = label.textContent.trim();
                        const tag = document.createElement('span');
                        tag.className = 'badge bg-primary d-flex align-items-center mb-2 me-2';
                        tag.innerHTML = `
                            ${labelText}
                            <button type="button" class="btn-close btn-close-white ms-2" 
                                    onclick="document.getElementById('${checkbox.id}').click();"
                                    aria-label="Eliminar"></button>
                        `;
                        tagsContainer.appendChild(tag);
                    }
                });
            } else {
                container.style.display = 'none';
            }
        }

        // Mostrar/ocultar características de campo basado en el tipo de propiedad
        function updateFieldFeaturesVisibility() {
            // Esta función se puede usar si necesitas mostrar/ocultar características específicas
            // basado en el tipo de propiedad
        }
    </script>
}
