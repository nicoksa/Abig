@page "{draftId?}"
@model Abig2025.Pages.Post.PostModel
@{
    ViewData["Title"] = "Publicar Inmueble";
}

<link rel="stylesheet" href="~/css/stylePost.css" />
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

<div class="container-fluid px-4 py-5">


    <!-- Barra de progreso -->
    <div class="progress-container mb-5">
        <div class="progress-steps-wrapper">
            <div class="progress-steps step-1">
                <div class="step active">
                    <div class="step-circle bg-primary text-white">1</div>
                    <div class="step-label fw-bold">Principales</div>
                </div>
                <div class="step-connector active"></div>
                <div class="step">
                    <div class="step-circle">2</div>
                    <div class="step-label">Multimedia</div>
                </div>
                <div class="step-connector"></div>
                <div class="step">
                    <div class="step-circle">3</div>
                    <div class="step-label">Extras</div>
                </div>
                <div class="step-connector"></div>
                <div class="step">
                    <div class="step-circle">4</div>
                    <div class="step-label">Publicar</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center" style="padding-top:35px">
        <div class="col-lg-10">

            <!-- Encabezado -->
            <div class="d-flex align-items-center mb-5 p-4 bg-white rounded-3 shadow-sm border-start border-4 border-primary">
                <div class="flex-shrink-0 me-4">
                    <i class="bi bi-house-add fs-1 text-primary"></i>
                </div>
                <div>
                    <h1 class="fw-bold mb-2 text-primary">¡Hola! Empecemos a crear tu aviso</h1>
                    <p class="lead text-muted mb-0">Completá los datos principales de tu propiedad</p>
                </div>
            </div>

            <form method="post" id="propertyForm" class="needs-validation" novalidate>


                <input type="hidden" asp-for="DraftId" />

                <!-- Campo oculto para coordenadas -->
                <input type="hidden" asp-for="Data.Latitude" id="LatitudHidden"
                       value="@(Model.Data.Latitude?.ToString("F6", System.Globalization.CultureInfo.InvariantCulture))" />
                <input type="hidden" asp-for="Data.Longitude" id="LongitudHidden"
                       value="@(Model.Data.Longitude?.ToString("F6", System.Globalization.CultureInfo.InvariantCulture))" />

                <!-- ============================
                      SECCIÓN 1 - OPERACIÓN
                ==============================-->
                <div class="card mb-4 border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom-0 py-3">
                        <h5 class="mb-0 fw-bold text-primary">
                            <i class="bi bi-tags me-2"></i>Tipo de operación
                        </h5>
                    </div>
                    <div class="card-body pt-0">
                        <div class="row g-2">
                            <div class="col-md-6">
                                <input type="radio" class="btn-check"
                                       asp-for="Data.OperationType" id="opRent" value="Alquiler">
                                <label class="btn btn-outline-primary w-100 py-3" for="opRent">
                                    <i class="bi bi-house-door fs-4 d-block mb-2"></i>
                                    <span class="fw-bold">Alquiler</span>
                                </label>
                            </div>

                            <div class="col-md-6">
                                <input type="radio" class="btn-check"
                                       asp-for="Data.OperationType" id="opTemp" value="AlquilerTemporal">
                                <label class="btn btn-outline-primary w-100 py-3" for="opTemp">
                                    <i class="bi bi-calendar-week fs-4 d-block mb-2"></i>
                                    <span class="fw-bold">Temporal</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- ============================
                      SECCIÓN 2 - TIPO PROPIEDAD
                ==============================-->
                <div class="card mb-4 border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom-0 py-3">
                        <h5 class="mb-0 fw-bold text-primary">
                            <i class="bi bi-house-gear me-2"></i>Tipo de propiedad
                        </h5>
                    </div>
                    <div class="card-body pt-0">

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Tipo</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-building"></i></span>
                                    <select class="form-select" asp-for="Data.PropertyType">
                                        <option disabled selected>Selecciona</option>
                                        <option value="Casa">Casa</option>
                                        <option value="Departamento">Departamento</option>
                                        <option value="PH">PH</option>
                                        <option value="Terreno">Terreno</option>
                                        <option value="Local">Local</option>
                                        <option value="Oficina">Oficina</option>
                                        <option value="Quinta">Quinta</option>
                                        <option value="Campo">Campo</option>
                                        <option value="Cochera">Cochera</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Subtipo</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-building-add"></i></span>
                                    <input class="form-control" asp-for="Data.Subtype" placeholder="Opcional" />
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <!-- ============================
                      SECCIÓN 3 - UBICACIÓN
                ==============================-->
                <div class="card mb-4 border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom-0 py-3">
                        <h5 class="mb-0 fw-bold text-primary">
                            <i class="bi bi-geo-alt me-2"></i>Ubicación
                        </h5>
                    </div>

                    <div class="card-body pt-0">
                        <div class="row g-3">

                            <div class="col-md-4">
                                <label class="form-label fw-bold">Provincia</label>
                                <select class="form-select" asp-for="Data.ProvinceId" id="Data_ProvinceId">
                                    <option value="">Selecciona provincia</option>
                                    <!-- Se llena con JavaScript -->
                                </select>
                                <input type="hidden" asp-for="Data.Province" id="ProvinceName" />
                            </div>

                            <div class="col-md-4">
                                <label class="form-label fw-bold">Localidad</label>
                                <select class="form-select" asp-for="Data.CityId" id="Data_CityId" disabled>
                                    <option value="">Primero selecciona provincia</option>
                                    <!-- Se llena con JavaScript -->
                                </select>
                                <input type="hidden" asp-for="Data.City" id="CityName" />
                            </div>


                            <div class="col-md-4">
                                <label class="form-label fw-bold">Barrio</label>
                                <select class="form-select" asp-for="Data.NeighborhoodId" id="Data_NeighborhoodId" disabled>
                                    <option value="">Primero selecciona localidad</option>
                                    <!-- Se llena con JavaScript -->
                                </select>
                                <input type="hidden" asp-for="Data.Neighborhood" id="NeighborhoodName" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Calle</label>
                                <input class="form-control" asp-for="Data.Street" />
                            </div>

                            <div class="col-md-2">
                                <label class="form-label fw-bold">Número</label>
                                <input class="form-control" asp-for="Data.Number" />
                            </div>

                            <div class="col-md-4">
                                <label class="form-label fw-bold">Código Postal</label>
                                <input class="form-control" asp-for="Data.PostalCode" />
                            </div>

                            <!-- MAPA -->
                            <div class="col-12 mt-3">
                                <div class="card border-0 shadow-sm">
                                    <div class="card-body p-0">
                                        <div id="map" style="height: 300px; border-radius: 8px;"></div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <!-- ============================
                      SECCIÓN 4 - CARACTERÍSTICAS
                ==============================-->
                <div class="card mb-4 border-0 shadow-sm">

                    <div class="card-header bg-white border-bottom-0 py-3">
                        <h5 class="mb-0 fw-bold text-primary">
                            <i class="bi bi-list-check me-2"></i>Características principales
                        </h5>
                    </div>

                    <div class="card-body pt-0">
                        <div class="row g-3">

                            <div class="col-md-3">
                                <label class="form-label fw-bold">Ambientes</label>
                                <select class="form-select" asp-for="Data.MainRooms">
                                    <option disabled selected>Seleccioná</option>
                                    <option value="1">1 ambiente</option>
                                    <option value="2">2 ambientes</option>
                                    <option value="3">3 ambientes</option>
                                    <option value="4">4 ambientes</option>
                                    <option value="5">5+</option>
                                </select>
                            </div>

                            <div class="col-md-3">
                                <label class="form-label fw-bold">Dormitorios</label>
                                <select class="form-select" asp-for="Data.Bedrooms">
                                    <option disabled selected>Seleccioná</option>
                                    <option value="1">1 dormitorio</option>
                                    <option value="2">2 dormitorios</option>
                                    <option value="3">3 dormitorios</option>
                                </select>
                            </div>

                            <div class="col-md-3">
                                <label class="form-label fw-bold">Baños</label>
                                <select class="form-select" asp-for="Data.Bathrooms">
                                    <option disabled selected>Seleccioná</option>
                                    <option value="1">1 baño</option>
                                    <option value="2">2 baños</option>
                                </select>
                            </div>

                            <div class="col-md-3">
                                <label class="form-label fw-bold">Cocheras</label>
                                <select class="form-select" asp-for="Data.ParkingSpaces">
                                    <option value="0">0</option>
                                    <option value="1">1</option>
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Superficie cubierta</label>
                                <input type="number" class="form-control" asp-for="Data.CoveredArea" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Superficie total</label>
                                <input type="number" class="form-control" asp-for="Data.TotalArea" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Antigüedad</label>
                                <input type="number" class="form-control" asp-for="Data.Age" />
                            </div>

                            <div class="col-md-6">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input"
                                           asp-for="Data.IsUnderConstruction" />
                                    <label class="form-check-label fw-bold">En construcción</label>
                                </div>

                                <div class="form-check mt-2">
                                    <input type="checkbox" class="form-check-input"
                                           asp-for="Data.IsNew" />
                                    <label class="form-check-label fw-bold">A estrenar</label>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <!-- ============================
                      SECCIÓN 5 - PRECIO
                ==============================-->
                <div class="card mb-4 border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom-0 py-3">
                        <h5 class="mb-0 fw-bold text-primary">
                            <i class="bi bi-currency-exchange me-2"></i>Precio
                        </h5>
                    </div>

                    <div class="card-body pt-0">

                        <div class="row g-3">

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Moneda</label>
                                <select class="form-select" asp-for="Data.Currency">
                                    <option value="ARS">ARS</option>
                                    <option value="USD">USD</option>
                                </select>
                                <span asp-validation-for="Data.Currency" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Precio</label>
                                <input type="number" class="form-control"
                                       asp-for="Data.Price"
                                       required
                                       min="1"
                                        />
                                <div class="invalid-feedback">Ingresá un precio válido (mayor a 0)</div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Moneda expensas</label>
                                <select class="form-select" asp-for="Data.ExpensesCurrency">
                                    <option value="ARS">ARS</option>
                                    <option value="USD">USD</option>
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Expensas (opcional)</label>
                                <input type="number" class="form-control" asp-for="Data.Expenses" />
                            </div>

                        </div>
                    </div>
                </div>

                <!-- ============================
                      SECCIÓN 6 - DESCRIPCIÓN
                ==============================-->
                <div class="card mb-4 border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom-0 py-3">
                        <h5 class="mb-0 fw-bold text-primary">
                            <i class="bi bi-text-paragraph me-2"></i>Descripción
                        </h5>
                    </div>

                    <div class="card-body pt-0">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Título del aviso</label>
                            <input class="form-control" asp-for="Data.Title" required />
                            <div class="invalid-feedback">El título es obligatorio</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Descripción</label>
                            <textarea class="form-control" asp-for="Data.Description" rows="5"></textarea>
                        </div>
                    </div>
                </div>

                <!-- ============================
                      BOTONES
                ==============================-->
                <div class="d-flex justify-content-between mb-5">

                    <a asp-page="/Index" class="btn btn-outline-secondary px-4 py-2">
                        <i class="bi bi-arrow-left me-2"></i>Cancelar
                    </a>

                    <button type="submit" class="btn btn-primary px-4 py-2">
                        Siguiente <i class="bi bi-arrow-right ms-2"></i>
                    </button>

                </div>

            </form>
        </div>
    </div>
</div>

<script src="~/js/post.js"></script>
<script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Obtener valores iniciales de los campos ocultos
        const latInput = document.getElementById("LatitudHidden");
        const lngInput = document.getElementById("LongitudHidden");

        // IMPORTANTE: Convertir los valores de string a número
        let initialLat = -34.6037;
        let initialLng = -58.3816;

        // Verificar si hay valores en los campos ocultos
        if (latInput && latInput.value && latInput.value.trim() !== '') {
            const latValue = parseFloat(latInput.value);
            if (!isNaN(latValue)) {
                initialLat = latValue;
            }
        }

        if (lngInput && lngInput.value && lngInput.value.trim() !== '') {
            const lngValue = parseFloat(lngInput.value);
            if (!isNaN(lngValue)) {
                initialLng = lngValue;
            }
        }

        console.log("Coordenadas iniciales para el mapa:", initialLat, initialLng);

        // Inicializar mapa CON LAS COORDENADAS GUARDADAS
        const map = L.map('map').setView([initialLat, initialLng], 13);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);

        // Crear marcador EN LA POSICIÓN GUARDADA
        const marker = L.marker([initialLat, initialLng], { draggable: true }).addTo(map);

        // Centrar el mapa en el marcador (por si acaso)
        map.setView([initialLat, initialLng], 13);

        marker.on('dragend', function () {
            const pos = marker.getLatLng();
            // Formatear con 6 decimales
            const lat = pos.lat.toFixed(6);
            const lng = pos.lng.toFixed(6);

            // Actualizar los campos ocultos
            if (latInput) latInput.value = lat;
            if (lngInput) lngInput.value = lng;

            console.log("Coordenadas actualizadas:", lat, lng);
        });

        // VALIDACIÓN CON BOOTSTRAP (JavaScript puro)
        (function () {
            'use strict'

            // Obtener el formulario
            const form = document.getElementById('propertyForm');

            // Validar al enviar
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }

                // Agregar la clase was-validated para mostrar errores
                form.classList.add('was-validated');
            }, false);

            // Validación en tiempo real (opcional)
            const inputs = form.querySelectorAll('input, select, textarea');
            inputs.forEach(input => {
                input.addEventListener('blur', function () {
                    if (!this.checkValidity()) {
                        this.classList.add('is-invalid');
                        this.classList.remove('is-valid');
                    } else {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    }

                    // Si el formulario ya fue validado, mantener was-validated
                    if (form.classList.contains('was-validated')) {
                        form.classList.add('was-validated');
                    }
                });

                // Limpiar validación al escribir
                input.addEventListener('input', function () {
                    if (this.checkValidity()) {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    }
                });
            });

            // Validar radio buttons (especial)
            const radioButtons = form.querySelectorAll('input[type="radio"]');
            radioButtons.forEach(radio => {
                radio.addEventListener('change', function () {
                    const name = this.name;
                    const radios = form.querySelectorAll(`input[name="${name}"]`);
                    const radioGroup = radios[0].closest('.row') || form;

                    // Verificar si algún radio está seleccionado
                    const isChecked = Array.from(radios).some(r => r.checked);

                    if (!isChecked) {
                        radios.forEach(r => {
                            const label = form.querySelector(`label[for="${r.id}"]`);
                            if (label) label.classList.add('is-invalid');
                        });
                    } else {
                        radios.forEach(r => {
                            const label = form.querySelector(`label[for="${r.id}"]`);
                            if (label) label.classList.remove('is-invalid');
                        });
                    }
                });
            });
        })();
    </script>


    <script>
        $(document).ready(function() {

             const CABA_CITY_ID = 3954;

            // Cargar provincias al inicio
            loadProvinces();

            // Cuando cambia la provincia
            $('#Data_ProvinceId').change(function() {
                var provinceId = $(this).val();
                var provinceName = $(this).find('option:selected').text();
                $('#ProvinceName').val(provinceName);

                if (provinceId) {
                    loadCities(provinceId);
                    $('#Data_CityId').prop('disabled', false);
                    $('#Data_NeighborhoodId').prop('disabled', true).empty()
                        .append('<option value="">Primero selecciona localidad</option>');
                } else {
                    $('#Data_CityId').prop('disabled', true).empty()
                        .append('<option value="">Primero selecciona provincia</option>');
                    $('#Data_NeighborhoodId').prop('disabled', true).empty()
                        .append('<option value="">Primero selecciona localidad</option>');
                }
            });

            // Cuando cambia la ciudad
                        $('#Data_CityId').change(function() {
                var cityId = $(this).val();
                var cityName = $(this).find('option:selected').text();
                $('#CityName').val(cityName);

                if (cityId && parseInt(cityId) === CABA_CITY_ID) {

                    loadNeighborhoods(cityId);
                    $('#Data_NeighborhoodId').prop('disabled', false);

                } else {

                    $('#Data_NeighborhoodId')
                        .prop('disabled', true)
                        .empty()
                        .append('<option value="">Barrio solo disponible para CABA</option>');

                    $('#NeighborhoodName').val('');
                }
            });
        });

        function loadProvinces() {
            $.get('/api/location/provinces', function(data) {
                var select = $('#Data_ProvinceId');
                var currentProvinceId = '@Model.Data.ProvinceId';

                select.empty();
                select.append('<option value="">Selecciona provincia</option>');

                $.each(data, function(index, province) {
                    var option = $('<option></option>')
                        .val(province.provinceId)
                        .text(province.name);

                    if (province.provinceId == currentProvinceId) {
                        option.prop('selected', true);
                        $('#ProvinceName').val(province.name);
                    }

                    select.append(option);
                });

                // Si hay una provincia seleccionada, cargar sus ciudades
                if (currentProvinceId) {
                    loadCities(currentProvinceId);
                }
            });
        }

        function loadCities(provinceId) {
            $.get(`/api/location/provinces/${provinceId}/cities`, function(data) {
                var select = $('#Data_CityId');
                var currentCityId = '@Model.Data.CityId';

                select.empty();
                select.append('<option value="">Selecciona localidad</option>');

                $.each(data, function(index, city) {
                    var option = $('<option></option>')
                        .val(city.cityId)
                        .text(city.name);

                    if (city.cityId == currentCityId) {
                        option.prop('selected', true);
                        $('#CityName').val(city.name);
                        // Cargar barrios si hay ciudad seleccionada
                        loadNeighborhoods(currentCityId);
                    }

                    select.append(option);
                });

                select.prop('disabled', false);
            });
        }

        function loadNeighborhoods(cityId) {
            $.get(`/api/location/cities/${cityId}/neighborhoods`, function(data) {
                var select = $('#Data_NeighborhoodId');
                var currentNeighborhoodId = '@Model.Data.NeighborhoodId';

                select.empty();
                select.append('<option value="">Selecciona barrio </option>');

                $.each(data, function(index, neighborhood) {
                    var option = $('<option></option>')
                        .val(neighborhood.neighborhoodId)
                        .text(neighborhood.name);

                    if (neighborhood.neighborhoodId == currentNeighborhoodId) {
                        option.prop('selected', true);
                        $('#NeighborhoodName').val(neighborhood.name);
                    }

                    select.append(option);
                });

                select.prop('disabled', false);
            });
        }
    </script>
}

